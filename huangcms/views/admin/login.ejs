    <link rel="stylesheet" href="/css/login.css">
</head>

<body>
	<form class="formAdd" action="/admin/doLogin" method="post">
        <div class="dowebok">
            <div class="logo"></div>
            <div class="form-item">
                <p  class="text-danger errorStr"><%= error %></p>
                <input id="username" type="text" autocomplete="off" placeholder="用户名" name="name">
            </div>
            <div class="form-item">
                <input id="password" type="password" autocomplete="off" placeholder="登录密码" name="password">
            </div>
            <div class="form-item">
                <input id="yanzheng" type="text" placeholder="验证码" name="code">
                <span class="input-group-addon" id="basic-addon2">
    				<a href="/admin/adminAdd"><img src="/admin/code"></a>
    			</span>
            </div>
            <div class="form-item">
                <button id="submit" type="submit">登 录</button>
            </div>
        </div>
    </form>
</body>

</html>