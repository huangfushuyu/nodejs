<% include header %>
	<div class="header">
		<!-- 页面标题 -->
		<h1 class="page-header">文章列表</h1>
		<!-- 路径导航 -->
		<ol class="breadcrumb">
			<li>
				<a href="#">文章管理</a>
			</li>
			<li class="active">文章列表</li>
		</ol> 
		<!-- 路径导航 end -->
	</div>
	<div id="page-inner">
		<div class="dashboard-cards">
			<div class="row">
				<table class="table table-hover ">
					<tr class="danger">
						<th>序号</th>
						<th>封面</th>
						<th>文章标题</th>
						<th>所属栏目</th>
						<th>创建时间</th>
						<th>操作</th>
					</tr>
					<% articles.forEach(function(val,i){ %>
					<tr>
						<td><%=i+1%></td>
						<td><img src="/<%=val.imgurl%>"></td>
						<td><%= val.title %></td>
						<td><%= val.itemId.name %></td>
						<td><%= val.ctime.toLocaleString() %></td>
						<td>
							<a href="/admin/articleEdit/<%=val._id%>">编辑</a>
							|
							<a href="/admin/articleRemove/<%=val._id%>" onclick="return confirm('您确定要删除吗?')">
									删除
							</a>
						</td>
					</tr>
					<% })%>
				</table>
			</div>
			<div class="col-md-12">
				<!-- 分页 -->
				<nav aria-label="Page navigation" id="arcnav">
				  <ul class="pagination">
				    <li><a href="/admin/articleList">首页</a></li>
				    <li><a href="/admin/articleList?page=<%=page -1%>">上一页</a></li>
				    <% for(var i=1;i<=maxPage;i++){ %>
					    <li><a href="/admin/articleList?page=<%=i%>"><%=i%></a></li>
				    <% } %>
				    <li><a href="/admin/articleList?page=<%=-(-page-1)%>">下一页</a></li>
				    <li><a href="/admin/articleList?page=<%=maxPage%>">尾页</a></li>
				  </ul>
				</nav>
				<!-- 分页 END -->
			</div>
		</div>
	</div>
<% include footer %>