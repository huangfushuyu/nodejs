<% include header %>
	<div class="header">
		<!-- 页面标题 -->
		<h1 class="page-header">友链列表</h1>
		<!-- 路径导航 -->
		<ol class="breadcrumb">
			<li>
				<a href="#">友链管理</a>
			</li>
			<li class="active">友链列表</li>
		</ol> 
		<!-- 路径导航 end -->
	</div>
	<div id="page-inner">
		<div class="dashboard-cards">
			<div class="row">
				<table class="table table-hover ">
					<tr class="danger">
						<th>序号</th>
						<th>名称</th>
						<th>地址</th>
						<th>创建时间</th>
						<th>操作</th>
					</tr>
					<% links.forEach(function(val,i){ %>
						<tr class="success">
							<td><%= i+1%></td>
							<td><%= val.name %></td>
							<td><%= val.info %></td>
							<td><%= val.ctime.toLocaleString() %></td>
							<td>
								<a href="/admin/linkEdit/<%=val._id%>">编辑</a>
								|
								<a href="/admin/linkDel/<%=val._id%>" onclick="return confirm('您确定要删除吗?')">
									删除
								</a>
							</td>
						</tr>
					<% })%>
				</table>
			</div>
		</div>
	</div>
<% include footer %>