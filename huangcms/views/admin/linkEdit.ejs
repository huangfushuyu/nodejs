<% include header %>

	<div class="header">
		<!-- 页面标题 -->
		<h1 class="page-header">友链管理</h1>
		<!-- 路径导航 -->
		<ol class="breadcrumb">
			<li>
				<a href="#">友链管理</a>
			</li>
			<li class="active">修改友链</li>
		</ol> 
		<!-- 路径导航 end -->
	</div>
		
	<div id="page-inner">
		<div class="dashboard-cards">
			<div class="row">
				<form class="itemAdd" action="/admin/linkUpdate" method="post">
					<div class="row">
					<input type="hidden" name="_id" value="<%=link._id%>">
						<div class="input-field col s12">
							<input id="password" type="text" class="validate" name="name" value="<%=link.name%>">
							<label for="password">链接名称</label>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<textarea id="textarea1" class="materialize-textarea" name="info"><%=link.info%></textarea>
							<label for="textarea1">链接地址</label>
						</div>
					</div>
					<div class="row">
						<div class="col s5"></div>	
						<div class="input-field col s2">
							<button class="btn waves-effect waves-light btn-group-justified" type="submit" name="action">提交
								<i class="material-icons right">send</i>
							</button>
						</div>
						<div class="col s5"></div>
					</div>
				</form>
			</div>
		</div>
	</div>
<% include footer %>