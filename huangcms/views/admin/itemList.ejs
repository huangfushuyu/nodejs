<% include header %>
	<div class="header">
		<!-- 页面标题 -->
		<h1 class="page-header">栏目列表</h1>
		<!-- 路径导航 -->
		<ol class="breadcrumb">
			<li>
				<a href="#">栏目管理</a>
			</li>
			<li class="active">栏目列表</li>
		</ol> 
		<!-- 路径导航 end -->
	</div>
	<div id="page-inner">
		<div class="dashboard-cards">
			<div class="row">
				<table class="table table-hover ">
					<tr class="danger">
						<th>栏目序号</th>
						<th>栏目名称</th>
						<!-- <th>栏目类型</th> -->
						<th>栏目介绍</th>
						<th>创建时间</th>
						<th>操作</th>
					</tr>
					<% items.forEach(function(val){ %>
						<tr class="success">
							<td><%= val.order %></td>
							<td><%= val.name %></td>
							
							<td><%= val.info %></td>
							<td><%= val.ctime.toLocaleString() %></td>
							<td>
								<a href="/admin/itemEdit/<%=val._id%>">编辑</a>
								|
								<a href="/admin/itemDel/<%=val._id%>" onclick="return confirm('您确定要删除吗?')">
									删除
								</a>
							</td>
						</tr>
					<% })%>
				</table>
			</div>
		</div>
	</div>
<% include footer %>